#!/bin/bash
bindir=`dirname $0`
rootdir=$bindir/..
gradledir=$rootdir/vendor/gradle-1.0-milestone-3

if [ ! -e $gradledir ]; then
  wget http://repo.gradle.org/gradle/distributions/gradle-1.0-milestone-3-bin.zip 
  mkdir $rootdir/vendor
  unzip *.zip -d $rootdir/vendor/
  rm -f gradle*.zip
fi

$gradledir/bin/gradle $*
